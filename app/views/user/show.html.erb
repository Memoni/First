<h1>User#show</h1>
<hr>
<style>
    tr td{
        border: 1px solid #0093ff;
        width: 100px;
        text-align: right;
    }
</style>
<%= link_to "deleteAll",user_deleteAll_path  %>
<table>
  <tr>
    <td>id</td>
    <td>name</td>
    <td>age</td>
    <td>password</td>
  </tr>
  <% @users.each { |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.age %></td>
        <td><%= user.password %></td>
      </tr>
  <% } %>
</table>
